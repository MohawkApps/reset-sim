#!/usr/bin/env ruby

def osascript(script)
  system 'osascript', *script.split(/\n/).map { |line| ['-e', line] }.flatten
end

osascript <<-END
    set appName to "iOS Simulator"
    if application "Simulator" is running then
        set appName to "Simulator"
    end

    tell application appName
        activate
    end tell

    tell application "System Events"
        tell process appName
            tell menu bar 1
                tell menu bar item appName
                    tell menu appName
                        click menu item "Reset Content and Settingsâ€¦"
                    end tell
                end tell
            end tell
            tell window 1
                click button "Reset"
            end tell
        end tell
    end tell
END
